{
  "manifest_version": 3,
  "name": "osu!Challengers Extension",
  "version": "2.1.0",
  "description": "Toggle between default stats and O!c Mode custom panel. By Paraliyzed_evo and Thunderbirdo.",
  "homepage_url": "https://github.com/ParaliyzedEvo/osu-Challengers-Extension",
  "icons": {
    "128": "icon128.png",
    "256": "icon256.png"
  },
  "action": {
    "default_title": "osu!Challengers Extension"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://osu.ppy.sh/users/*",
    "https://osu.ppy.sh/u/*",
    "https://challengersnexus.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://osu.ppy.sh/users/*",
        "https://osu.ppy.sh/u/*"
      ],
      "js": ["main.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["main.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
